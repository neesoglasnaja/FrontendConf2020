.slide
    .shout.smaller
        font-size 90px
        a
            color #fff
    &.menu-slide
        h2
            font-size 120px
            margin-bottom 0
            padding 0 30px
        ul
            color #FFF
            & > li
                font-size 120px
                line-height 1
                font-weight bold
                padding 0 30px
                &:before
                    opacity 0

        .selected-item
            background-color main-color
            display inline-block

        .transparent
            opacity 0.25
    &.label-header
        h2
            display inline-block
            padding 10px 30px
            background-color main-color
            color #fff
            border-radius: 100px
            &.shout
                width 800px
                padding-top 20px
                padding-bottom 20px
                font-size 90px
                left: 50%;
                transform: translate(-50%, -50%);
        &.captain
            h2
                margin: 0;
                margin-top: -100px;
                width: 100%;
                padding: 30px 0;
                border-radius: 0;
                position relative
                font-size: 60px;
                height: 180px;
                align-items: center;
                justify-content: center;
                display: flex;
                &::after
                    content: ''
                    background-color: main-color
                    width: 50px;
                    height: 50px;
                    display: block;
                    position: absolute
                    bottom: -25px;
                    transform: rotate(-10deg) skewY(50deg)
                    right: 110px;
                    z-index -1
        .captain-text
            position: absolute;
            bottom: 15%;
            text-align: center;
            width: 100%;
            left: 0;
    &.capture
        h2
            &.shout
                font-size 64px;

    h2 .label
        color #FFF
        padding 10px 40px
        font-size 120px
        &.right
            float right

    p.center
        text-align center
        img
            max-width 100%

